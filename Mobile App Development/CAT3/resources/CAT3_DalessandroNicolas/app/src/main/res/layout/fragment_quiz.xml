<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questions2"
    tools:context=".ui.quiz.QuizFragment">



    <ImageView
        android:id="@+id/item_image_detail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:background="#dddddd"
        android:transitionName="itemImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0.5"
       />

    <TextView
        android:id="@+id/item_text_title"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />

    <!-- BEGIN-CODE-UOC -->

    <TextView
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/item_text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="answer1"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"
        android:padding="16dp"
        />


    <TextView
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/answer1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="answer2"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/answer2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="answer3"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/answer4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/answer3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="answer4"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/answer4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="HELP"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#00ff00"
        android:gravity="center"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@+id/link"
        app:layout_constraintRight_toRightOf="parent"
         />



    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:text="Prev"
        app:layout_constraintTop_toBottomOf="@+id/link"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:text="Finish"
        app:layout_constraintTop_toBottomOf="@+id/link"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>